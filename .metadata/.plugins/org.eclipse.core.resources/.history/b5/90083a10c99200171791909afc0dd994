<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- 
    	注册School
    	当对域属性进行自动注入的时候,注意这里的id名要和Student中的School对象的属性名相同
     -->
    <bean id="school" class="com.spring.di07.School">
    	<property name="name" value="清华大学"/>
    </bean>
    
    <!-- 注册Student -->
    <!-- 对于基本数据类型用value,对于类数据类型用ref -->
    <!-- 在工作中设值注入时最常用的,构造注入基本不用 -->
    <bean id="myStudent" class="com.spring.di07.Student" autowire="byName">
    	<property name="name" value="张三"/>
    	<property name="age" value="3"/>
    </bean>
</beans>